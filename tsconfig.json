{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/*.spec.ts"
  ]
}
